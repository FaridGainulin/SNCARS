.start-section
  // background-image: url('../images/start-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 30px 0 30px 0
    +above($breakpoints.md)
      padding 60px 0 60px 0
    +above($breakpoints.xxl)
      padding 85px 0 80px 0

  &__title
    padding 0 0 15px 0
    text-align: center
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 35px 0
    +above($breakpoints.xxl)
      padding 0 0 47px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    position relative
    width 280px !important
    height: 94px
    background-color #F5F5F5
    border-radius: 15px
    padding 20px 8px
    +above($breakpoints.sm)
      width 358px !important
      height: 115px
      border-radius: 20px
      padding 30px 10px 20px 25px
    +above($breakpoints.md)
      width 473px !important
      height: 165px
      padding 50px 10px 25px 30px
      border-radius: 25px
    +above($breakpoints.xxl)
      border-radius: 30px
      width 580px !important
      height: 200px
      padding 62px 10px 32px 45px

  &__card-img
    position: absolute
    width 84px
    height: auto
    bottom: 0
    right: 0
    +above($breakpoints.sm)
      width 103px
    +above($breakpoints.md)
      width 148px
    +above($breakpoints.xxl)
      width 180px

  &__card-title
    display: inline-block
    background: linear-gradient(to right, #b8cbe6, #1458bd)
    -webkit-background-clip: text;
    -moz-background-clip: text;
    background-clip: text;
    color: transparent;
    padding-bottom 5px
    +above($breakpoints.sm)
      padding-bottom 10px
    +above($breakpoints.md)
      padding-bottom 15px
    +above($breakpoints.xxl)
      padding-bottom 20px

  &__bottom-title
    text-align: center
    padding 0 0 10px 0
    +above($breakpoints.sm)
      padding 30px 0 15px 0
    +above($breakpoints.md)
      padding 40px 0 15px 0
    +above($breakpoints.xxl)
      padding 50px 0 15px 0

  &__arrow
    width 25px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      width 35px
    +above($breakpoints.md)
      width 45px
    +above($breakpoints.xxl)
      width 48px

  &__bottom-text
    text-align: center
    padding 10px 0 15px 0
    +above($breakpoints.sm)
      padding 15px 0 15px 0
    +above($breakpoints.xxl)
      padding 16px 0 16px 0

  &__btn
    width 280px !important
    margin 0 auto
    +above($breakpoints.sm)
      width 260px
    +above($breakpoints.md)
      width 280px
    +above($breakpoints.xxl)
      width 300px
