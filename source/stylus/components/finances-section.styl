.finances-section
  background-image: url('../images/finances-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #e2e2e2

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 40px 0
    +above($breakpoints.md)
      padding 70px 0 70px 0
    +above($breakpoints.xxl)
      padding 90px 0 100px 0

  &__title
    text-align: center

  &__arrow
    width 25px
    height: auto
    margin 15px auto
    +above($breakpoints.sm)
      width 35px
      margin 20px auto
    +above($breakpoints.md)
      width 45px
      margin 25px auto
    +above($breakpoints.xxl)
      width 48px
      margin 30px auto

  &__box
    display: flex
    flex-direction: column
    align-items: center
    +above($breakpoints.sm)
      flex-direction: row-reverse
      align-items: flex-start
      justify-content: space-between

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content flex-end
      gap: 10px
    +above($breakpoints.md)
      gap: 15px 20px
    +above($breakpoints.xxl)
      gap: 20px

  &__card
    width 280px !important
    height: 80px
    background-color #F5F5F5
    border-radius: 10px
    padding 5px
    +above($breakpoints.sm)
      border-radius: 15px
      width 235px !important
      height: 90px
    +above($breakpoints.md)
      border-radius: 20px
      width 308px !important
      height: 118px
    +above($breakpoints.xxl)
      width 379px !important
      height: 141px

  &__card-title
    width 100%
    height: 30px
    display: flex
    align-items: center
    justify-content center
    background-color #E0E3ED
    border-radius: 10px
    margin-bottom 10px
    +above($breakpoints.sm)
      margin-bottom 12px
      border-radius: 15px
      justify-content: flex-start
      height: 40px
      padding-left 15px
    +above($breakpoints.md)
      margin-bottom 14px
      border-radius: 20px
      height: 48px
      padding-left 20px
    +above($breakpoints.xxl)
      margin-bottom 16px
      height: 57px
      padding-left 24px

  &__card-text
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding-left 8px
    +above($breakpoints.md)
      padding-left 10px
    +above($breakpoints.xxl)
      padding-left 29px

  &__img
    width 280px
    height: auto
    +above($breakpoints.sm)
      width 235px
    +above($breakpoints.md)
      width 308px
    +above($breakpoints.xxl)
      margin-top -6px
      width 380px

  &__bottom
    position relative
    background-color #F5F5F5
    border-radius: 10px
    text-align: center
    padding 15px 10px
    margin-top 20px
    +above($breakpoints.sm)
      margin-top 50px
      padding 30px 10px 20px 30px
      text-align: start
      border-radius: 20px
    +above($breakpoints.md)
      margin-top 70px
      border-radius: 25px
      padding 40px 10px 30px 40px
    +above($breakpoints.xxl)
      margin-top 87px
      border-radius: 30px
      padding 50px 10px 35px 57px

  &__bottom-img
    position: absolute
    width: 120px;
    height: auto;
    top: 0;
    right: -70px;
    +above($breakpoints.sm)
      width: 330px;
      top: -7px;
      right: -62px;
    +above($breakpoints.md)
      width: 440px;
      top: -16px;
      right: -59px;
    +above($breakpoints.xxl)
      width 556px
      top: -22px
      right: -76px

  &__bottom-title
    +above($breakpoints.xxl)
      line-height 120% !important

  &__bottom-text
    padding 15px 0 10px
    +above($breakpoints.sm)
      padding 25px 0 10px
    +above($breakpoints.md)
      padding 30px 0 14px
    +above($breakpoints.xxl)
      padding 34px 0 14px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 170px !important
      +above($breakpoints.md)
        width 200px !important
    input
      +above($breakpoints.xxl)
        width 223px !important
    button
      +above($breakpoints.xxl)
        width 276px !important
