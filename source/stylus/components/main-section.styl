.main-section
  background-color #030c34
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center

  &__container
    position relative
    z-index 1
    padding 20px 0 10px 0
    color: #fff
    +above($breakpoints.sm)
      padding 30px 0 60px 0
    +above($breakpoints.md)
      padding 35px 0 90px 0
    +above($breakpoints.xxl)
      padding 47px 0 135px 0

  &__icon
    margin 10px auto
    width 127px
    height: auto
    +above($breakpoints.sm)
      width 100px
      margin 40px 0 15px
    +above($breakpoints.md)
      width 117px
      margin 60px 0 19px
    +above($breakpoints.xxl)
      width 127px
      margin 87px 0 19px

  &__title,
  &__bottom-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    padding 15px 0 15px 0
    display: flex
    align-items: center
    justify-content center
    gap: 5px
    +above($breakpoints.sm)
      align-items: flex-start
      justify-content start
      gap: 10px
      padding 25px 0 40px 0
    +above($breakpoints.md)
      gap: 15px
      padding 30px 0 50px 0
    +above($breakpoints.xxl)
      gap: 22px
      padding 36px 0 84px 0

  &__sub-title-icon
    width 22px
    height: 22px
    +above($breakpoints.sm)
      width 34px
      height: 34px
    +above($breakpoints.md)
      width 38px
      height: 38px
    +above($breakpoints.xxl)
      width 42px
      height: 42px

  &__sub-title-mark
    color: #C1C1C1

  &__bottom
    width 100%
    background-color #fff
    color: #fff
    border-radius: 10px
    padding 15px 10px
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 15px
      width 420px
      border-radius: 15px
      padding 15px 15px 20px 15px
    +above($breakpoints.md)
      gap: 20px
      width 600px
      border-radius: 20px
      padding 20px 25px 30px 25px
    +above($breakpoints.xxl)
      width 633px
      height: 250px
      border-radius: 25px
      padding 24px 27px 33px 27px

  &__bottom-title
    width 100%
    height: 60px
    display: flex
    align-items: center
    justify-content center
    background-color #2E46A9
    border-radius: 10px
    gap: 10px
    +above($breakpoints.sm)
      height: 70px
      border-radius: 15px
      justify-content start
      gap: 9px
      padding-left 15px
    +above($breakpoints.md)
      height: 90px
      border-radius: 20px
    +above($breakpoints.xxl)
      padding-left 0px
      border-radius: 25px
      height: 108px

  &__bottom-title-icon
    width 50px
    height: auto
    +above($breakpoints.sm)
      width 70px
    +above($breakpoints.md)
      width 80px
    +above($breakpoints.xxl)
      width 94px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
    & > *
      width 288px !important
      +above($breakpoints.sm)
        width 170px !important
      +above($breakpoints.md)
        width 220px !important
      +above($breakpoints.xxl)
        width 253px !important

  &__img
    width 280px
    height: auto
    margin: -13px 0px 0px 133px;
    +above($breakpoints.sm)
      margin: 0;
      position: absolute;
      width: 750px;
      bottom: 38px;
      right: -392px;
    +above($breakpoints.md)
      width: 1000px;
      bottom: 63px;
      right: -530px;
    +above($breakpoints.xxl)
      width 1443px
      bottom: 61px
      right: -830px

  &__border
    position: absolute
    width: 130px;
    height: 29px;
    top: 130px;
    left: 166px;
    +above($breakpoints.sm)
      width: 192px;
      height: 64px;
      top: 144px;
      left: 212px;
    +above($breakpoints.md)
      width: 283px;
      height: 65px;
      top: 196px;
      left: 303px;
    +above($breakpoints.xxl)
      width: 345px;
      height: 65px;
      top: 252px;
      left: 378px;
